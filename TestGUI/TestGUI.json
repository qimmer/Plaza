      "Children": [
        {
          "Uuid": "TestGui.Context.Keys.Close",
          "InputStateKey": "KEY_WINDOW_CLOSE",
          "InputStateContext": "TestGui.Context"
        },
        {
          "Uuid": "TestGui.Context.Keys.ShowStats",
          "InputStateKey": "KEY_F8",
          "InputStateContext": "TestGui.Context"
        },
        {
          "Uuid": "TestGui.Context.Keys.ShowDebug",
          "InputStateKey": "KEY_F9",
          "InputStateContext": "TestGui.Context"
        }
      ]
