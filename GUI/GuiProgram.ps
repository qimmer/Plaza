$input v_texcoord0, v_normal

#include <common.sh>

uniform vec4 u_uvOffsetSizePerSampler[8];
SAMPLER2D(s_widgetMeshTexture, 0);

void main()
{
    v_normal = abs(v_normal);
    vec4 albedo = texture2D(s_widgetMeshTexture, v_texcoord0 * u_uvOffsetSizePerSampler[0].zw + u_uvOffsetSizePerSampler[0].xy);
    gl_FragColor = albedo;
}
