$input v_uv, v_ao_palette, v_normal

#include <common.sh>

SAMPLER2D(s_palette, 0);

#ifdef PICK
uniform vec4 pickId;
#endif

void main()
{
#ifdef PICK
    gl_FragColor = pickId;
#else
    vec4 paletteRgba = texture2D(s_palette, vec2(v_ao_palette.y, 0.5f));

    vec4 albedo = paletteRgba;
    gl_FragColor = albedo; // * v_ao
#endif
}
