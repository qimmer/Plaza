{
    "CompileRules": {
        "Clang_Compile": {
            "Conditions": "MacUniversal",
            "CommandLine": "clang -x c++ -lstdc++ -c [!Debug:-O 3] [Debug:-g] $(InputFile) $(CppDefine) $(CppIncludeDir) -o $(OutputPath)",
            "OutputPath": "$(ProjectPath)/Build/$(Flags)/$(InputName).o",
            "FileTypes": "*.cpp;*.cxx"
        }
    },
    "LinkRules": {
        "Clang_Shared": {
            "Conditions": "MacUniversal;Module",
            "CommandLine": "libtool -dynamic $(InputFiles) -o $(ProjectPath)/Build/$(Platform)_$(Configuration)/$(ProjectName).dylib -framework CoreFoundation -lSystem",
            "OutputPath": "$(ProjectPath)/Build/$(Platform)_$(Configuration)/$(ProjectName).dylib",
            "FileTypes": "*.o"
        }
    }
}